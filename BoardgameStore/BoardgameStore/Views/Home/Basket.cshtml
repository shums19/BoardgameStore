@model IEnumerable<BoardgameStore.Models.Basket>

@{
    ViewBag.Title = "Корзина";
}
<h2 style="color: #32A4B8; font-weight: 700">Ваша корзина</h2>
<hr />

@foreach (var basket in Model)
{
    <br />
    <div class="row">
        <div class="thumbnail">
            <div class="col-xs-3">
                @if (basket.Boardgame.cover_path.IsEmpty() || basket.Boardgame.cover_path.Equals(""))
                {
                    <img src="~/Content/d12.png" alt="Обложка" style="height: 200px; width: auto">
                }
                else
                {
                    <img src="~/Content/@basket.Boardgame.cover_path" alt="Обложка" style="height: 200px; width: auto">
                }
            </div>
            <div class="caption">
                <div class="row col-xs-9">
                    <div class="col-xs-12 text-center">
                        <a href="~/Home/Details/@basket.Boardgame.boardgame_id">
                            <h3>@basket.Boardgame.boardgame_name</h3>
                        </a>
                    </div>
                    <div class="col-xs-12">
                        <div class="col-xs-12 text-center">
                            <h2 style="font-weight: 700 ">@(basket.Boardgame.boardgame_cost * basket.product_number) руб.</h2>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <a href="~/Home/ReduceOrder/@basket.basket_id" class="btn btn-default" role="button">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        </a>
                        &nbsp;
                        <span style="background-color: gainsboro; font-size:25px; padding: 0px 7px">@basket.product_number</span>
                        &nbsp;
                        <a href="~/Home/IncreaseOrder/@basket.basket_id" class="btn btn-default" role="button">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        </a>
                    </div>
                    <div class="col-xs-6 text-right">
                        <a href="~/Home/DeleteOrder/@basket.basket_id" class="btn btn-danger right" role="button">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Удалить
                        </a>
                    </div>
                </div>
                @*@if (Request.IsAuthenticated)
                    {*@
                <br />
                <div class="container">
                    <div class="row">
                    </div>
                </div>
            </div>
        </div>

    </div>
}

    <div class="row">
        <div class="col-xs-12 text-center">
            <h2>
                <h2 style="color: #32A4B8; font-weight: 700 ">Итоговая сумма: @ViewBag.Sum руб.</h2>
            </h2>
        </div>
        <div class="col-xs-12 text-center">
            <h2>
                <a href="#" class="btn btn-info" role="button">Оформить заказ</a>
            </h2>
        </div>
    </div>


