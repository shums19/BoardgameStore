@model IEnumerable<BoardgameStore.Models.Boardgame>

@{
    ViewBag.Title = "Каталог";
}

<h2 style="color: #32A4B8; font-weight: 700">Каталог игр</h2>
<hr />
<div class="row">
    <div class="col-xs-12 text-center">
        <a href="~/Home/Create" class="btn btn-info btn-lg" role="button">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Добавить игру
        </a>
    </div>
</div>
@*<p>
        @Html.ActionLink("Добавить игру", "Create", null, htmlAttributes: new { @class = "btn btn-info text-center" })
    </p>*@
<div class="container">
    @foreach (var boardgame in Model)
    {
        <br />
        <div class="row">
            <div class="thumbnail">
                <div class="col-xs-3">
                    @if (boardgame.cover_path.IsEmpty() || boardgame.cover_path.Equals(""))
                    {
                        <img src="~/Content/d12.png" alt="Обложка" style="height: 200px; width: auto">
                    }
                    else
                    {
                        <img src="~/Content/@boardgame.cover_path" alt="Обложка" style="height: 200px; width: auto">
                    }
                </div>
                <div class="caption">
                    <div class="row col-xs-9">
                        <div class="col-xs-12 text-center">
                            <a href="~/Home/Details/@boardgame.boardgame_id">
                                <h3>@boardgame.boardgame_name</h3>
                            </a>
                        </div>
                        <div class="col-xs-12">
                            <div class="col-xs-4 text-center">
                                <span class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span>
                                @if (boardgame.years.HasValue)
                                {
                                    <p class="left">@boardgame.years+ </p>
                                }

                                else
                                {
                                    <p>-</p>
                                }
                            </div>
                            <div class="col-xs-4 text-center">
                                <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
                                @if (boardgame.min_time.HasValue && boardgame.max_time.HasValue)
                                {
                                    <p>@boardgame.min_time-@boardgame.max_time</p>
                                }
                                else if (boardgame.min_time.HasValue && !boardgame.max_time.HasValue)
                                {
                                    <p>@boardgame.min_time</p>
                                }
                                else if (!boardgame.min_time.HasValue && boardgame.max_time.HasValue)
                                {
                                    <p>@boardgame.max_time</p>
                                }
                                else
                                {
                                    <p>-</p>
                                }
                            </div>
                            <div class="col-xs-4 text-center">
                                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                @if (boardgame.min_players.HasValue && boardgame.max_players.HasValue)
                                {
                                    <p>@boardgame.min_players-@boardgame.max_players</p>
                                }
                                else if (boardgame.min_players.HasValue && !boardgame.max_players.HasValue)
                                {
                                    <p>@boardgame.min_players</p>
                                }
                                else if (!boardgame.min_players.HasValue && boardgame.max_players.HasValue)
                                {
                                    <p>@boardgame.max_players</p>
                                }
                                else
                                {
                                    <p>-</p>
                                }
                            </div>
                            <div class="col-xs-12">
                                <p>@boardgame.preview_description</p>
                            </div>
                            <div class="col-xs-12 text-center">
                                <h2 style="font-weight: 700 ">@boardgame.boardgame_cost руб.</h2>
                            </div>
                            <div class="col-xs-4 text-left">
                                <a href="~/Home/Edit/@boardgame.boardgame_id" class="btn btn-primary" role="button">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Редактировать
                                </a>
                            </div>
                            <div class="col-xs-4 text-center">

                                <a href="~/Home/IntoBasket/@boardgame.boardgame_id" class="btn btn-info" role="button">
                                    <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> В корзину
                                </a>
                            </div>
                            <div class="col-xs-4 text-right">
                                <a href="~/Home/Delete/@boardgame.boardgame_id" class="btn btn-danger right" role="button">
                                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Удалить
                                </a>
                            </div>
                        </div>
                    </div>
                    @*@if (Request.IsAuthenticated)
                        {*@
                    <br />
                    <div class="container">
                        <div class="row">
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
</div>


